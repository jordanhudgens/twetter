<div class="clearfix top-space small"></div>
<div class="row">

  <%= render :partial => 'shared/left_nav' %>

  <div class="panel panel-default col-md-8 text-left">
    <div class="pull-left">
      <h4>Twets</h4>
    </div>
    <div class="clearfix"></div>
    <hr />
    <ol class="list-unstyled">
      <% @twets.each do |twet| -%>
      <li>
      <span class='text-muted pad-10 text-middle'><%= link_to "@"+twet.user.username, '/'+twet.user.username %></strong></span>
        <%= content_tag :small, twet.created_at.strftime("%b %-d"), :class => 'text-muted text-middle pull-right' %>
        <div class="clearfix"></div>
        <%= content_tag :p, twet.content.gsub(/(^@\w*)|(@\w*)/, link_to('@'+twet.user.username, '/'+twet.user.username)).html_safe %>
      </li>
      <li><hr></li>
      <% end -%>
    </ol>
  </div>
</div>

